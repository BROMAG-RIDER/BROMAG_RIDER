                android:layout_marginEnd="31dp"
                android:layout_marginTop="50dp"
                app:cardBackgroundColor="#FBFDFD"
                app:layout_constraintTop_toBottomOf="@id/lay2">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/lay3"
                        android:layout_width="match_parent"
                        android:layout_height="97dp"
                        android:weightSum="3"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="11dp"
                        app:layout_constraintTop_toTopOf="parent">
                        <LinearLayout
                            android:layout_width="84dp"
                            android:layout_height="95dp"
                            app:cardCornerRadius="8dp"
                            android:layout_weight="1"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="23dp"
                            android:orientation="vertical"
                            android:background="@drawable/card_bg">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today orders"
                                android:textSize="9sp"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textColor="#1581FF"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="06"
                                android:textSize="30sp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textColor="#5F5F5F"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="84dp"
                            android:layout_height="95dp"
                            app:cardCornerRadius="8dp"
                            android:layout_weight="1"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="23dp"
                            android:orientation="vertical"
                            android:background="@drawable/card_bg">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today earned"
                                android:textSize="9sp"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textColor="#1581FF"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1,500"
                                android:textSize="30sp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textColor="#5F5F5F"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="84dp"
                            android:layout_height="95dp"
                            app:cardCornerRadius="8dp"
                            android:layout_weight="1"
                            android:layout_marginStart="2dp"
                            android:orientation="vertical"
                            android:background="@drawable/card_bg">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weekly orders"
                                android:textSize="9sp"
                                android:layout_gravity="center"
                                android:layout_marginTop="16dp"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textColor="#1581FF"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="23"
                                android:textSize="30sp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textColor="#5F5F5F"/>
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/i1"
                        android:layout_width="match_parent"
                        android:layout_height="136dp"
                        android:src="@drawable/dash_circle"
                        android:layout_marginTop="47dp"
                        app:layout_constraintTop_toBottomOf="@id/lay3"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dash_bike"
                        android:layout_marginStart="60dp"
                        android:rotation="-30"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/i1"/>
                    <ImageView
                        android:id="@+id/i2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dash_half_circle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/card_bg"
                        app:layout_constraintTop_toTopOf="@id/i2"
                        app:layout_constraintStart_toStartOf="@id/i2"
                        app:layout_constraintEnd_toEndOf="@id/i2"
                        app:layout_constraintBottom_toBottomOf="@id/i2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Week so far"
                            android:textSize="9sp"
                            android:layout_gravity="center"
                            android:layout_marginTop="26dp"
